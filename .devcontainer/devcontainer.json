{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "1",
			"NODE_VERSION": "18"
		}
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],

	"settings": {
		"go.toolsManagement.checkForUpdates": "local",
		"go.useLanguageServer": true,
		"go.gopath": "/go"
	},

	"extensions": [
		"golang.Go",
		"IronGeek.vscode-env"
	],
	"forwardPorts": [],
	"remoteUser": "vscode",
	"features": {
		"docker-in-docker": "latest",
		"github-cli": "latest",
		"azure-cli": "latest"
	}
}
